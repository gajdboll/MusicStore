@model MusicStoreData.Models.CMS.NewsAndArticles

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Edit News And Articles</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="table-responsive">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="BlogImage" hidden />
                    <table class="table table-bordered table-striped table-hover">
                        <tbody>
                            <tr>
                                <td>
                                    <label asp-for="Name" class="form-label">Name</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" class="form-control" id="floatingInput" placeholder="">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Descriptions" class="form-label">Description</label>
                                </td>
                                <td>
                                    <div class="form-floating">
                                        <textarea asp-for="Descriptions" class="form-control" style="height: 300px;" placeholder=""></textarea>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Author" class="form-label">Enter Author</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Author" class="form-control" id="floatingDescription" placeholder="Author"></input>
                                         <span asp-validation-for="Author" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Position" class="form-label">Position</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Position" class="form-control" id="floatingInput" placeholder="">
                                        <span asp-validation-for="Position" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            
                            <tr>
                                <td>
                                    <label asp-for="BlogImage" class="form-label">Sub-Category Image Url</label>
                                </td>
                                <td>
                                    <div class="mb-3">
                                        <input asp-for="BlogImage" class="form-control" id="floatingInput" placeholder="" disabled>
                                        <input type="file" name="file" asp-for="BlogImage" class="form-control" id="imageInput">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="BtnName" class="form-label">Enter Button Name</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="BtnName" class="form-control" id="floatingInput" placeholder="Button Name">
                                        <label asp-for="BtnName">Button Name</label>
                                        <span asp-validation-for="BtnName" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success m-2" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-img-top" style="background-image: url('@Model.BlogImage'); background-size: cover; background-position: center; height: 400px;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
