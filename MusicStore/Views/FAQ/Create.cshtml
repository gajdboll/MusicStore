@model FAQ

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Create a Question</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <form asp-action="Create" asp-controller="FAQ" method="post">
            <input type="hidden" name="productTypeId" value="@ViewBag.ProductTypeId" />

            <table class="table table-bordered table-striped table-hover">
                <tbody>

                    <tr>
                        <td>
                            <label asp-for="Subject" class="form-label">Subject</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Subject" class="form-control" id="floatingInput" placeholder="Subject">
                                <label asp-for="Subject" class="form-label">Enter Subject</label>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Descriptions" class="form-label">Enter Question Description</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Descriptions" class="form-control" id="floatingDescription" placeholder="Question Description"></input>
                                <label asp-for="Descriptions" class="form-label">Enter Descriptions</label>
                                <span asp-validation-for="Descriptions" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Email" class="form-label">Enter Email</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" id="floatingDescription" placeholder="Email"/>
                                <label asp-for="Email" class="form-label">Enter Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
        
                </tbody>
            </table>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success m-2" />
            </div>
        </form>
    </div>
</div> 