@model MusicStoreData.Models.CMS.Manufacturer

@{
    ViewData["Title"] = "Details";
}
 
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Details for Manufacturer</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-route-id="@Model?.Id" class="btn btn-secondary m-2">
                <i class="bi bi-pencil"></i>
                Edit
            </a>
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="table-responsive">
             <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <td>
                            <label asp-for="Name" class="form-label">Name</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" id="floatingInput" placeholder="" disabled>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Descriptions" class="form-label">Description</label>
                        </td>
                        <td>
                            <div class="form-floating">
                            <textarea asp-for="Descriptions" class="form-control" style="height: 300px;" placeholder="" disabled></textarea>
                                <span asp-validation-for="Descriptions" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Position" class="form-label">Position</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                            <input asp-for="Position" class="form-control" id="floatingInput" placeholder="" disabled>
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                <tr>
                    <td>
                        <label asp-for="isActive" class="form-label">Status</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            @if (Model.isActive)
                            {
                                <span class="badge bg-success" disabled>Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger" disabled>Inactive</span>
                            }                            
                            <span asp-validation-for="isActive" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for=" LogoUrl" class="form-label">Image Url</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            @if (string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <img id="imagePreview" src="~/png/manufacture/default.webp"  class="img-fluid img-thumbnail" alt="Image Preview" style="max-height: 100px;">
                            }
                            else
                            {
                                <img id="imagePreview" src="@Model.LogoUrl" class="img-fluid img-thumbnail" alt="Image Preview" style="max-height: 100px;">
                            }
                            <input asp-for="LogoUrl" class="form-control" id="floatingInput" placeholder="" disabled>
                            <span asp-validation-for="LogoUrl" class="text-danger"></span>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label asp-for="CountryOfOrigin" class="form-label">Enter Country Of Origin</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="CountryOfOrigin" class="form-control" id="floatingDescription" placeholder="Country Of Origin"></input>
                            <label asp-for="CountryOfOrigin">Country Of Origin</label>
                            <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="ContactNumber" class="form-label">Enter Service Contact Number</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="ContactNumber" class="form-control" id="floatingInput" placeholder="Contac tNumber">
                            <label asp-for="ContactNumber">Contact Number</label>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="ManufacturerEmail" class="form-label">Enter Manufacturer Email</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="ManufacturerEmail" class="form-control" id="floatingDescription" placeholder="ManufacturerEmail"></input>
                            <label asp-for="ManufacturerEmail">Manufacturer Email</label>
                            <span asp-validation-for="ManufacturerEmail" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="Name" class="form-label">Enter Manufacturer Web</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="ManufacturerWeb" class="form-control" id="floatingInput" placeholder="ManufacturerWeb">
                            <label asp-for="ManufacturerWeb">Manufacturer Web</label>
                            <span asp-validation-for="ManufacturerWeb" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="ManufactureAddress" class="form-label">Enter Manufacturer Address</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <textarea asp-for="ManufactureAddress" class="form-control" id="floatingDescription" placeholder="Manufacture Address"></textarea>
                            <label asp-for="ManufactureAddress">Manufacture Address</label>
                            <span asp-validation-for="ManufactureAddress" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="DateAdded" class="form-label">Date of Adding</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="DateAdded" class="form-control" id="floatingInput" placeholder="" disabled>
                            <span asp-validation-for="DateAdded" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="ModificationDate" class="form-label">Modification Date</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="ModificationDate" class="form-control" id="floatingInput" placeholder="" disabled>
                            <span asp-validation-for="ModificationDate" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="DateOfDelete" class="form-label">Date Of Delete</label>
                    </td>
                    <td>
                        <div class="form-floating mb-3">
                            <input asp-for="DateOfDelete" class="form-control" id="floatingInput" placeholder="" disabled>
                            <span asp-validation-for="DateOfDelete" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
             
     </div>
</div>


@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
