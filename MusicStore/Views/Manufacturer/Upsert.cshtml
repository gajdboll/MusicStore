@model MusicStoreData.Models.CMS.Manufacturer

@{
    var isNew = Model == null || Model.Id == 0;
    ViewData["Title"] = isNew ? "Create" : "Update";

}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">
                @if (isNew)
                {
                    <text>Create Manufacturer</text>
                }
                else
                {
                    <text>Update Manufacturer</text>
                }
            </h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="table-responsive">
                <form asp-action="Upsert" method="post">
                    <input asp-for="LogoUrl" hidden />
                    <input type="hidden" asp-for="Id" />

                    <table class="table table-bordered table-striped table-hover">
                        <tbody>
                            <tr>
                                <td>
                                    <label asp-for="Name" class="form-label">Manufacturer Name</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Name">
                                        <label asp-for="Name">Name</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Descriptions" class="form-label">Description</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Descriptions" class="form-control" id="floatingDescription" placeholder="Description"></textarea>
                                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="LogoUrl" class="form-label">Image URL</label>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <label asp-for="LogoUrl" class="form-label">Image URL</label>
                                        <input type="file" name="file" asp-for="LogoUrl" class="form-control" id="floatingDescription"/>
                                        <span asp-validation-for="LogoUrl" class="text-danger"></span>

                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="CountryOfOrigin" class="form-label">Country Of Origin</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="CountryOfOrigin" class="form-control" id="floatingDescription" placeholder="Country Of Origin"/>
                                        <label asp-for="CountryOfOrigin">Enter Country Of Origin</label>
                                        <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="ContactNumber" class="form-label"> Contact Number</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="ContactNumber" class="form-control" id="floatingInput" placeholder="Contac tNumber">
                                        <label asp-for="ContactNumber">Enter Contact Number</label>
                                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="ManufacturerEmail" class="form-label">  Manufacturer Email</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="ManufacturerEmail" class="form-control" id="floatingDescription" placeholder="ManufacturerEmail"/>
                                        <label asp-for="ManufacturerEmail">Enter Manufacturer Email</label>
                                        <span asp-validation-for="ManufacturerEmail" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="ManufacturerWeb" class="form-label">  Manufacturer Web</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="ManufacturerWeb" class="form-control" id="floatingInput" placeholder="ManufacturerWeb">
                                        <label asp-for="ManufacturerWeb">Enter Manufacturer Web</label>
                                        <span asp-validation-for="ManufacturerWeb" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="ManufactureAddress" class="form-label">Manufacturer Address</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="ManufactureAddress" class="form-control" id="floatingDescription" placeholder="Manufacture Address"></textarea>
                                        <span asp-validation-for="ManufactureAddress" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Position" class="form-label">Position</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        @if (Model != null && Model.Id != 0)
                                        {
                                            <input asp-for="Position" class="form-control" id="floatingInput" placeholder="Position">
                                        }
                                        else
                                        {
                                            <input asp-for="Position" class="form-control" id="floatingInput" placeholder="Position" disabled>
                                        }
                                        <span asp-validation-for="Position" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group mt-3">
                        <input type="submit" value="Submit" class="btn btn-success m-2" />
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-4">
            <h6>Preview Of the Item</h6>
            <div class="card">
                <div class="card-img-top" style="background-image: url('@(string.IsNullOrEmpty(Model?.LogoUrl) ? "http://localhost/Images/png/manufacture/default.webp" : Model.LogoUrl)'); background-size: cover; background-position: center; height: 400px;"></div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
 
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
