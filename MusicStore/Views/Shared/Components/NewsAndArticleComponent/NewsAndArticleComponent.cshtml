@model IEnumerable<MusicStoreData.Models.CMS.NewsAndArticles>
@{
    ViewData["Title"] = "News & Blogs";
    var articleList = Model.OrderBy(x => Guid.NewGuid()).ToList();
}
<style>
    .yellow-button {
        background-color: #FFD700;
        color: #000;
        padding: 10px 20px;
        text-transform: uppercase;
        border: none;
        cursor: pointer;
        font-size: 14px;
        font-weight: bold;
        margin-top: 10px;
        display: inline-block;
    }

        .yellow-button:hover {
            background-color: #FFC107;
            color: #000;
        }

    .carousel-item img {
        width: 100%;
        height: auto;
    }

    .image-bar__item {
        position: relative;
        overflow: hidden;
        height: 450px; /* Zwiększenie wysokości */
        margin-bottom: 30px;
    }

    .image-bar__content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        background: rgba(0, 0, 0, 0.5); /* Półprzezroczyste tło dla lepszej czytelności tekstu */
        padding: 20px;
        z-index: 2;
    }

    .image-bar__text {
        color: #fff;
        z-index: 3;
    }

        .image-bar__text h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

    .image-bar__description {
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .image-bar__overlay img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Zapewnia, że obrazek zajmie całe dostępne miejsce bez zniekształceń */
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
    }
</style>

<div class="block__banner" style="background-image: url(//ap-melody.myshopify.com/cdn/shop/files/bg-banner-1-h1_2000x2000.jpg?v=1613529922); margin:;padding:68px 0;">
    <h5 style="color: #ffffff; text-align: center">News and Articles</h5>
    <br>

    <div class="container">
        <div class="row grid--no-gutters image-bar image-bar--">
            @foreach (var item in articleList.Take(3))
            {
                <div class="col-xs-12 col-md-4 col-sm-4">
                    <div class="image-bar__item image-bar__item--1482322129015-0">
                        <div class="image-bar__content image-bar__overlay">
                            <img class="img-responsive img-fit" alt="ap-melody" src="@item.BlogImage" />
                            <div class="image-bar__text">
                                <h3 class="image-bar__caption">@item.Name</h3>
                                <p class="image-bar__description">@item.Descriptions</p>
                                <a class="btn btn-links yellow-button" asp-action="ShowBlogs" asp-controller="Home" asp-route-id="@item.Id" title="@item.Name">
                                    @item.BtnName
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
