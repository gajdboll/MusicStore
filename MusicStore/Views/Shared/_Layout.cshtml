 ﻿@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    @* free access by insalling from the web: "https://www.tiny.cloud/my-account/integrate/#html" independent key needs to be created for each user *@
    <script src="https://cdn.tiny.cloud/1/j8mwrf3c2j9s7mg5l72ju9h8ok4zqdlatvtihef9f5qiyi8j/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
     <link rel="stylesheet" type="text/css"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- JavaScript dependencies -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" rel="stylesheet"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

 
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <header>
        @await Component.InvokeAsync("NavigationComponent")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <br>
    <br>
    @if (!@User.IsInRole("Admin"))
    {
        <div class="row mt-4">
            <div class="col text-center">
                @await Component.InvokeAsync("SubscriptionComponent")
            </div>
        </div>
    }
    <!-- footer -->

    <footer class="bg-dark text-white pt-5 pb-4">
        <div class="container text-center text-md-left">

            <div class="row align-items-start">
                <!-- Logo -->
                <div class="col-md-2 mb-4 mb-md-0 text-center text-md-left">
                    <a href="/" itemprop="url">
                        <img src="~/png/kapma.png" width="150" alt="KAPG music - Musical Instruments Shop">
                    </a>
                </div>

                <!-- Address -->
                @await Component.InvokeAsync("StoreAddressComponent")


                <!-- Useful Links -->
                <div class="col-md-6 text-center text-md-left">
                    @await Component.InvokeAsync("FooterInfoLinksComponent")
                </div>
            </div>

            <!-- Social MEdia -->
            <div class="row mt-4">
                <div class="col text-center">
                    @await Component.InvokeAsync("SocialComponent")
                </div>
            </div>



            <hr class="mb-4">

            <div class="row align-items-center">
                <div class="col-md-7 col-lg-8">
                    <p>© 2024 Kapma Music. Created by Krzysztof Gajdosz</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll up button -->
    <p id="back-top" style="display: none; position: fixed; bottom: 50px; left: 20px; z-index: 1000;">
        <a href="#top" title="Scroll To Top" style="color: #ff0000; text-decoration: none; display: inline-block; width: 70px; height: 70px; background-color: #f8f9fa; border-radius: 10px; text-align: center; line-height: 70px;">
            <i class="bi bi-arrow-up-circle-fill" style="font-size: 3rem;"></i>
        </a>
    </p>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 
    <script>
        function checkScroll() {
            const scrollPosition = window.scrollY + window.innerHeight;
            const threshold = document.body.scrollHeight * 0.5;

            if (scrollPosition > threshold) {
                document.getElementById('back-top').style.display = 'block';
            } else {
                document.getElementById('back-top').style.display = 'none';
            }
        }

        window.addEventListener('scroll', checkScroll);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
