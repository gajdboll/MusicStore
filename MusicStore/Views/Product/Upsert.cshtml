@model MusicStoreData.Models.Store.Product 

@{
    var isNew = Model == null || Model.Id == 0;
    ViewData["Title"] = isNew ? "Create" : "Update";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">
                @if (isNew)
                {
                    <text>Create Product</text>
                }
                else
                {
                    <text>Update Product</text>
                }
            </h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="table-responsive">
                <form asp-action="Upsert" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
  
                    <table class="table table-bordered table-striped table-hover">
                        <tbody>
                            <tr>
                                <td>
                                    <label asp-for="ProductTypeId" class="form-label">Web Header</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <select asp-for="ProductTypeId" class="form-control" asp-items="@(ViewData["ProductTypeId"] as IEnumerable<SelectListItem>)"></select>
                                        <label asp-for="ProductTypeId">Select Type</label>
                                        <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                                    </div>

                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <label asp-for="Name" class="form-label">Product Name</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" class="form-control" id="floatingName" placeholder="Name">
                                        <label asp-for="Name">Enter Name</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Descriptions" class="form-label">Description</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Descriptions" class="form-control" id="floatingDescriptions" placeholder="Description"></textarea>
                                         <span asp-validation-for="Descriptions" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="ColorId" class="form-label">Color</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <select asp-for="ColorId" class="form-control" asp-items="@(ViewData["ColorId"] as IEnumerable<SelectListItem>)"></select>
                                        <label asp-for="ColorId">Select Color</label>
                                        <span asp-validation-for="ColorId" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <label asp-for="Quantity" class="form-label">Quantity</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <textarea asp-for="Quantity" class="form-control" id="floatingMoreInfo" placeholder="Quantity"></textarea>
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Position" class="form-label">Position</label>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <div class="form-floating mb-3">
                                            @if (Model != null && Model.Id != 0)
                                            {
                                                <input asp-for="Position" class="form-control" id="floatingInput" placeholder="Position">
                                            }
                                            else
                                            {
                                                <input asp-for="Position" class="form-control" id="floatingInput" placeholder="Position" disabled>
                                            }
                                            <span asp-validation-for="Position" class="text-danger"></span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group mt-3">
                        <input type="submit" value="Submit" class="btn btn-success m-2" />
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>
 