@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@model MusicStoreData.Models.CMS.Concert

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Create New Concert</h4>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-6 text-end">
                <a asp-action="Index" class="btn btn-primary m-2">
                    <i class="bi bi-arrow-left"></i>
                    Back to List
                </a>
            </div>
        }
    </div>

    <div class="table-responsive">
        <form asp-action="Create" method="post">
            <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <td>
                            <label asp-for="Name" class="form-label">Name</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Enter Name">
                                <label asp-for="Name">Enter Title</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Descriptions" class="form-label">Enter Description</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <textarea asp-for="Descriptions" class="form-control" id="floatingDescription" placeholder="Description" style="width:300px"></textarea>
                             </div>
                        </td>
                    </tr>
              
                    <tr>
                        <td>
                            <label asp-for="Image" class="form-label">Enter PhotoUrl</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Image" class="form-control" id="floatingDescription" placeholder="PictureUrl"></input>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Location" class="form-label">Enter Location</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Location" class="form-control" id="floatingDescription" placeholder="Location"></input>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="MusicType" class="form-label">Enter Music Type</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="MusicType" class="form-control" id="floatingDescription" placeholder="MusicType"></input>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="OpeningTime" class="form-label">Enter Opening Time</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="OpeningTime" class="form-control" id="floatingDescription" placeholder="OpeningTime"></input>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success m-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
