@model MusicStoreData.Models.Store.ProductType

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Create New Product Type</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <form asp-action="Create" method="post">
            <table class="table table-bordered table-striped table-hover">
                <tbody>
                    <tr>
                        <td>
                            <label asp-for="ProductSubCategoryId" class="form-label">Product SubCategory</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <select asp-for="ProductSubCategoryId" class="form-control" asp-items="ViewBag.ProductSubCategoryId"></select>
                                <label asp-for="ProductSubCategoryId">Select Product SubCategory</label>
                                <span asp-validation-for="ProductSubCategoryId" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="ManufacturerId" class="form-label">Manufacturer</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                                <label asp-for="ManufacturerId">Select Manufacturer</label>
                                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Name" class="form-label">Name</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
x                                <label asp-for="Name">Enter Product Type Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Descriptions" class="form-label">Description</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <textarea asp-for="Descriptions" class="form-control" id="floatingDescriptions" placeholder="Description"></textarea>
                                 <span asp-validation-for="Descriptions" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Price" class="form-label">Price</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Price" class="form-control" id="floatingPrice" placeholder="Price">
                                <label asp-for="Price">EnterPrice</label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="ProductStatus" class="form-label">Product Status</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <select asp-for="ProductStatus" class="form-control">
                                    <option value="true">New</option>
                                    <option value="false">Used</option>
                                </select>
                                <label asp-for="ProductStatus">Product Status</label>
                                <span asp-validation-for="ProductStatus" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label asp-for="MoreInfo" class="form-label">More Info</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="MoreInfo" class="form-control" id="floatingMoreInfo" placeholder="More Info">
                                <label asp-for="MoreInfo">EnterMore Info</label>
                                <span asp-validation-for="MoreInfo" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                 
                    
                </tbody>
            </table>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success m-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                // Get all textarea elements on the page
                var textareas = document.querySelectorAll('textarea');

                // Loop through each textarea and replace it with CKEditor
                textareas.forEach(function (textarea) {
                    CKEDITOR.replace(textarea, {
                        allowedContent: {
                            div: {
                                attributes: true,
                                classes: true,
                                styles: true
                            }
                        },
                        toolbar: [
                            { name: 'document', items: ['Source', '-', 'Save'] },
                            { name: 'clipboard', items: ['Cut', 'Copy', 'Paste', 'PasteText', 'PasteFromWord', '-', 'Undo', 'Redo'] },
                            { name: 'styles', items: ['Format'] },
                            { name: 'basicstyles', items: ['Bold', 'Italic', 'Underline', 'Strike', 'Subscript', 'Superscript', '-', 'RemoveFormat'] },
                            { name: 'paragraph', items: ['NumberedList', 'BulletedList', '-', 'Outdent', 'Indent', '-', 'Blockquote'] },
                            { name: 'links', items: ['Link', 'Unlink'] },
                            { name: 'insert', items: ['Image', 'Table'] },
                            { name: 'tools', items: ['Maximize'] },
                            { name: 'editing', items: ['Scayt'] },
                            { name: 'others', items: ['-'] },
                            { name: 'about', items: ['About'] }
                        ],
                        extraPlugins: 'image,table',
                        extraAllowedContent: '*(*)',
                        allowedContent: true
                    });
                });
            });

        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
