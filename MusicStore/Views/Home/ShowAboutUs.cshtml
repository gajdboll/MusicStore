 @model IEnumerable<MusicStoreData.Models.CMS.AboutUs>


<!-- Main Content -->
<div class="container my-5">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" asp-controller="AboutUs" class="btn btn-success m-2">
            <i class="bi bi-plus-circle"></i>
            Add New Entry
        </a>
    }
    <!-- Section: About the Store -->
    @foreach (var item in Model)
    {
        <section id="about">
            <div class="row">
                <div class="col-lg-6">
                    <h2>@item.Name</h2>
                    <p>@item.Descriptions</p>
                    <p>@item.AdditionalParagraph</p>
                </div>
                <div class="col-lg-6">
                    <img src="@item.PhotoUrl" alt="About Us" class="img-fluid rounded">
                </div>
            </div>
        </section>
        <hr class="my-5">
    }
    <!-- Section: Services -->
    <section id="services">
        <div class="row">
            <div class="col-lg-12">
                <h2>Our Services</h2>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-music-note-beamed fs-1 text-primary"></i>
                                <h5 class="card-title mt-3">Instrument Sales</h5>
                                <p class="card-text">We offer a wide selection of musical instruments for both beginners and professionals.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-tools fs-1 text-primary"></i>
                                <h5 class="card-title mt-3">Service and Repair</h5>
                                <p class="card-text">We provide professional service and repair for instruments and sound equipment.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-person-voice fs-1 text-primary"></i>
                                <h5 class="card-title mt-3">Consultations and Advice</h5>
                                <p class="card-text">We offer expert advice on choosing musical instruments and equipment.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
