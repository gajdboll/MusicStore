@model IEnumerable<MusicStoreData.Models.Store.TechInfo>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">TechInfos</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ControlAction" asp-action="Index" class="btn btn-info m-2">
                <i class="bi bi-layer-forward"></i>Web Managment
            </a>
         
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <h5 class="mb-4">Product Type</h5>
                    </th>
                    <th>
                        <h5 class="mb-4">Body Material</h5>
                    </th>
                    <th>
                        <h5 class="mb-4">Neck Material</h5>
                    </th>
                    <th>
                        <h5 class="mb-4">Actions</h5>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BodyMaterial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NeckMaterial)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info m-2">Details<i class="bi bi-file-bar-graph"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-2">Delete<i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br>
