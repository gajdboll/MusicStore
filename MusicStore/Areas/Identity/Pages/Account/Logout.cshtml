@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}
<header class="text-center my-4">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="d-inline-block" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <p>You have successfully logged out of the application.</p>

                <a href="@Url.Page("/Index", new { area = "" })" class="btn btn-primary">Main Page</a>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
            <a href="@Url.Page("/Index", new { area = "" })" class="btn btn-primary">Main Page</a>

        }
    }
 
</header>
